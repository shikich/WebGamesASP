@model WebGamesCRUD.Models.View.GenreListGenre
@{
    ViewData["Title"] = "Edit Group of genres";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h4>ListGenre</h4>
    <hr />
    <div class="row">
        <form method="post" asp-action="Edit">
            <div class="col-md-16">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdGenreListGenre" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="List" class="btn btn-secondary mx-4">Back to List</a>
                </div>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                IdGenre
                            </th>
                            <th>
                                Genres
                            </th>
                            <th>
                                IsAdded
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @for(int i = 0; i < Model.GroupGenres.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.GroupGenres[i].IdGenre)
                                    <input hidden asp-for="@Model.GroupGenres[i].IdGenre"/>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.GroupGenres[i].Name)
                                    <input hidden asp-for="@Model.GroupGenres[i].Name"/>
                                </td>
                                <td>
                                    @Html.CheckBoxFor(modelItem => modelItem.GroupGenres[i].Status)
                                </td>
                            </tr>
                        } 
                    </tbody>
                </table>
            </div>
        </form>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>

